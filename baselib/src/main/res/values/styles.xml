<resources>

    <style name="tab_text_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/color_333</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_333</item>
    </style>

    <style name="TextStyle.Content" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_666</item>
    </style>

    <style name="TextStyle.Chat_Name">
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:textColor">@color/color_666</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="TextStyle.Chat">
        <item name="android:maxWidth">@dimen/dp_max_chat</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextStyle.Comment" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.ShadowText">
        <item name="android:shadowColor">#19000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ExpandedTitleTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.Catalogue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="TextStyle.DES">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_aaa</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AnimationBottom">
        <item name="android:windowEnterAnimation">@anim/in_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_bottom</item>
    </style>

</resources>
